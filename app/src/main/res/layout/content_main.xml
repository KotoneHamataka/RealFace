<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lifeistech.android.realface.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/rank1_icon"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="centerCrop"
                android:gravity="center"
                app:riv_corner_radius="30dip"
                app:riv_border_width="2dip"
                app:riv_border_color="@android:color/darker_gray"
                android:onClick="slide"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_margin="16dp"
                android:elevation="3dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="name"
                    android:id="@+id/rank1_name"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/rank1_icon"
                    android:layout_alignParentEnd="false"
                    android:layout_margin="16dp"
                    android:layout_gravity="bottom|left"
                    android:textSize="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="score"
                    android:id="@+id/rank1_score"
                    android:layout_above="@+id/rank2_icon"
                    android:layout_toEndOf="@+id/rank1_icon"
                    android:layout_margin="16dp"
                    android:layout_gravity="left"
                    android:textSize="32dp" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/rank2_icon"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="centerCrop"
                android:gravity="center"
                app:riv_corner_radius="30dip"
                app:riv_border_width="2dip"
                app:riv_border_color="@android:color/darker_gray"
                android:onClick="slide"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:elevation="3dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="name"
                    android:id="@+id/rank2_name"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/rank1_icon"
                    android:layout_alignParentEnd="false"
                    android:layout_margin="16dp"
                    android:layout_gravity="right"
                    android:textSize="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="score"
                    android:id="@+id/rank2_score"
                    android:layout_above="@+id/rank2_icon"
                    android:layout_toEndOf="@+id/rank1_icon"
                    android:layout_margin="16dp"
                    android:layout_gravity="right"
                    android:textSize="36dp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/rank3_icon"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="centerCrop"
                android:gravity="center"
                app:riv_corner_radius="30dip"
                app:riv_border_width="2dip"
                app:riv_border_color="@android:color/darker_gray"
                android:layout_alignParentStart="true"
                android:onClick="slide"
                android:layout_margin="16dp"
                android:elevation="3dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="name"
                    android:id="@+id/rank3_name"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/rank1_icon"
                    android:layout_alignParentEnd="false"
                    android:layout_margin="16dp"
                    android:layout_gravity="left"
                    android:textSize="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="score"
                    android:id="@+id/rank3_score"
                    android:layout_above="@+id/rank2_icon"
                    android:layout_toEndOf="@+id/rank1_icon"
                    android:layout_margin="16dp"
                    android:layout_gravity="left"
                    android:textSize="36dp" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
